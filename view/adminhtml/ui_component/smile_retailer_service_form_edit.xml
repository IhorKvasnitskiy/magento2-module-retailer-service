<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">smile_retailer_service_form_edit.smile_retailer_service_form_edit_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Service Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Smile\RetailerService\Block\Adminhtml\Service\Edit\Button\Save"/>
            <button name="delete" class="Smile\RetailerService\Block\Adminhtml\Service\Edit\Button\Delete"/>
            <button name="back" class="Smile\RetailerService\Block\Adminhtml\Service\Edit\Button\Back"/>
        </buttons>
        <namespace>smile_retailer_service_form_edit</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>smile_retailer_service_form_edit.smile_retailer_service_form_edit_data_source</dep>
        </deps>
    </settings>
    <dataSource name="smile_retailer_service_form_edit_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="smile_retailer_service/service/save"/>
        </settings>
        <dataProvider class="Smile\RetailerService\Model\Service\Form\DataProvider" name="smile_retailer_service_form_edit_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>service_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <dataScope>name</dataScope>
                <label translate="true">Name</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="description" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="height" xsi:type="string">100px</item>
                        <item name="add_variables" xsi:type="boolean">false</item>
                        <item name="add_widgets" xsi:type="boolean">false</item>
                        <item name="add_images" xsi:type="boolean">true</item>
                        <item name="add_directives" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <label/>
                <dataScope>description</dataScope>
                <label translate="true">Description</label>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="status" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="media_path" formElement="imageUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">service</item>
                    <item name="label" xsi:type="string" translate="true">Media</item>
                    <item name="visible" xsi:type="string">true</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="smile_retailer_service/service/mediaUpload"/>
                    </item>
                </item>
            </argument>
        </field>
        <field name="sort" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <dataScope>sort</dataScope>
                <label translate="true">Sort</label>
            </settings>
        </field>
        <field name="created_at" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">From</label>
                <dataScope>created_at</dataScope>
            </settings>
        </field>
        <field name="end_at" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">service</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">To</label>
                <dataScope>end_at</dataScope>
            </settings>
        </field>
    </fieldset>
</form>